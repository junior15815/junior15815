  <!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
  </head>
  <body>
    <div class="container mx-auto bg-slate-300">
        <h1 class="text-center text-lg font-bold mb-5">Lista de certificados</h1>
        <% if(data.length) { %>
            <div class="mx-5 shadow-lg sm:rounded-lg bg-white"></div>
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">codigo</th>
                        <th scope="col">fecha_emision</th>
                        <th scope="col">asunto</th>
                    </tr>
                </thead>
                <tbody>
                <% for(var i = 0; i< data.length; i++) { %>
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 dark:text-white whitespace-nowrap">
                            <%= (i+1) %>
                        </th>
                        <td class="px-6 py-4"><%= data[i].codigo%></td>
                        <td class="px-6 py-4"><%= data[i].fecha_emicion%></td>
                        <td class="px-6 py-4">
                            <a class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900" href="../books/edit/<%=data[i].id%>">Edit</a>                       
                            <a class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900" onclick="return alert('Are You sure?')" href="../books/delete/<%=data[i].id%>">Delete</a>                       
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <% } %>
            <!-- if result is empty -->
            <% if(!data.length) { %>
                <p class="text-center">No se encontro ningun certificado</p>
            <% } %>
        </div>
  </body>
  </html>
